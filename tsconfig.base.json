{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "composite": true,
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "useUnknownInCatchVariables": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2020",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@cyan/indie-card/web-db-tables": [
        "indie-card/web-db-tables/src/index.ts"
      ],
      "@cyan/pulumi": ["plugins/pulumi/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
