{
  "name": "indie-card-web-db",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "indie-card/web-db/src",
  "projectType": "application",
  "implicitDependencies": ["indie-card-web-db-tables"],
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/indie-card/web-db",
        "main": "indie-card/web-db/src/main.ts",
        "tsConfig": "indie-card/web-db/tsconfig.app.json",
        "isolatedConfig": true,
        "webpackConfig": "indie-card/web-db/webpack.config.js",
        "assets": ["indie-card/web-db/src/migrations"],
        "externalDependencies": "none"
      },
      "configurations": {
        "development": {},
        "production": {
          "generatePackageJson": true
        }
      }
    },
    "execute": {
      "executor": "@nx/js:node",
      "dependsOn": ["build"],
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "indie-card-web-db:build",
        "inspect": false
      },
      "configurations": {
        "development": {
          "buildTarget": "indie-card-web-db:build:development"
        },
        "production": {
          "buildTarget": "indie-card-web-db:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "indie-card/web-db/jest.config.ts"
      }
    },
    "generate-schema-migration": {
      "command": "drizzle-kit generate:pg --config=indie-card/web-db/src/drizzle.config.ts"
    },
    "generate-custom-migration": {
      "command": "drizzle-kit generate:pg --config=indie-card/web-db/src/drizzle.config.ts --custom"
    },
    "check-migrations": {
      "command": "drizzle-kit check:pg --config=indie-card/web-db/src/drizzle.config.ts"
    },
    "db-push": {
      "command": "drizzle-kit push:pg --config=indie-card/web-db/src/drizzle.config.ts && nx watch --projects=indie-card-web-db --verbose --includeDependentProjects -- drizzle-kit push:pg --config=indie-card/web-db/src/drizzle.config.ts"
    }
  },
  "tags": []
}
